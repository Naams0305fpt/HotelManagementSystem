<Window x:Class="PhamHuynhSumWPF.Views.AdminShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:adminViews="clr-namespace:PhamHuynhSumWPF.Views.AdminView"
        mc:Ignorable="d"
        Title="Admin Dashboard - FUMiniHotelSystem" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Logout" 
                Width="80" Height="20" HorizontalAlignment="Right" 
                Margin="5,5,10,5"
                Click="Logout_Click"/>
        <TabControl Grid.Row="1">
            <TabItem Header="Customer Management">
                <adminViews:CustomersView/>
            </TabItem>
            <TabItem Header="Room Management">
                <adminViews:RoomsView/>
            </TabItem>
            <TabItem Header="Report &amp; Statistics">
                <adminViews:ReportView/>
            </TabItem>
        </TabControl>
    </Grid>

</Window>