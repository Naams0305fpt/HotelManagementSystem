<Window x:Class="PhamHuynhSumWPF.Views.Dialogs.EditCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamHuynhSumWPF.Views"
        mc:Ignorable="d"
        Title="Edit Customer" SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen"
        MinWidth="400"
        Background="#f0f0f0">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Full Name:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5"
                 Text="{Binding Entity.CustomerFullName, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalContentAlignment="Center" Padding="5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Email:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5"
                 Text="{Binding Entity.EmailAddress, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalContentAlignment="Center" Padding="5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Telephone:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5"
                 Text="{Binding Entity.Telephone, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalContentAlignment="Center" Padding="5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Birthday:" VerticalAlignment="Center" Margin="5"/>
        <DatePicker Grid.Row="3" Grid.Column="1" Margin="5"
                    SelectedDate="{Binding Entity.CustomerBirthday, UpdateSourceTrigger=PropertyChanged}" 
                    VerticalContentAlignment="Center" Padding="5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Password:" VerticalAlignment="Center" Margin="5"/>
        <PasswordBox Grid.Row="4" Grid.Column="1" Margin="5"
                     x:Name="txtPassword"
                     VerticalContentAlignment="Center" Padding="5"
                     ToolTip="Bỏ trống nếu không muốn thay đổi mật khẩu"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Status:" VerticalAlignment="Center" Margin="5"/>
        <ComboBox Grid.Row="5" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding AllStatuses}"
                  SelectedItem="{Binding Entity.CustomerStatus}"
                  VerticalContentAlignment="Center" Padding="5"/>
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Width="90" Height="25" Margin="5" 
                    Click="Save_Click" IsDefault="True"
                    Background="#007acc" Foreground="White"/>
            <Button Content="Cancel" Width="90" Height="25" Margin="5" 
                    Click="Cancel_Click" IsCancel="True"
                    Background="#ccc" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>