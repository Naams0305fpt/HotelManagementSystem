<Window x:Class="PhamHuynhSumWPF.Views.Dialogs.EditRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamHuynhSumWPF.Views"
        mc:Ignorable="d"
        Title="Room Details" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource LightBrush}">
    <Grid Margin="15" MinWidth="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Room Number:" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Entity.RoomNumber}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Entity.RoomDescription}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Capacity:" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Entity.RoomMaxCapacity}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Price/Date:" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Entity.RoomPricePerDate}"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Room Type:" Style="{StaticResource LabelStyle}"/>
        <ComboBox Grid.Row="4" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding RoomTypes}"
                  DisplayMemberPath="RoomTypeName"
                  SelectedValuePath="RoomTypeID"
                  SelectedValue="{Binding Entity.RoomTypeID}"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Width="80" Height="25" IsDefault="True" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Height="25" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>