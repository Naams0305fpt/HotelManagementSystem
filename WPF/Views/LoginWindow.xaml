<Window x:Class="PhamHuynhSumWPF.Views.LoginWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="FUMiniHotelSystem – Login" SizeToContent="Height" Width="520" WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome" FontSize="22" FontWeight="Bold" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock Text="Email"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Password" Margin="0,12,0,0"/>
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>

            <TextBlock Foreground="Red" Text="{Binding ErrorMessage}" Margin="0,8,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Login" Width="100" Margin="0,0,8,0" Command="{Binding LoginCommand}" Height="30"/>
            <Button Content="Exit" Width="100" Click="Close_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Window>