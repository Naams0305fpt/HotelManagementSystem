<UserControl x:Class="PhamHuynhSumWPF.Views.AdminView.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhamHuynhSumWPF.Views.AdminView"
             xmlns:vm="clr-namespace:PhamHuynhSumWPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource LightBrush}"
             d:DataContext="{d:DesignInstance Type=vm:ReportViewModel, IsDesignTimeCreatable=True}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="From:" Style="{StaticResource LabelStyle}"/>
            <DatePicker SelectedDate="{Binding StartDate}"/>
            <TextBlock Text="To:" Style="{StaticResource LabelStyle}" Margin="20,5,0,0"/>
            <DatePicker SelectedDate="{Binding EndDate}"/>
            <Button Content="Load Report" Command="{Binding LoadReportCommand}" Margin="20,5,5,5" Width="100"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Bookings}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingID}" Width="*"/>
                <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerID}" Width="*"/>
                <DataGridTextColumn Header="Room ID" Binding="{Binding RoomID}" Width="*"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat='d'}" Width="*"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat='d'}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat='C'}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>