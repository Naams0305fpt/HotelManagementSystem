<UserControl x:Class="PhamHuynhSumWPF.Views.AdminView.RoomsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhamHuynhSumWPF.Views.AdminView"
             xmlns:vm="clr-namespace:PhamHuynhSumWPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource LightBrush}"
             d:DataContext="{d:DesignInstance Type=vm:RoomsViewModel, IsDesignTimeCreatable=True}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Search:" Style="{StaticResource LabelStyle}"/>
            <TextBox Width="200" Text="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Content="Add" Width="80" Command="{Binding AddCommand}" Margin="20,5,5,5"/>
            <Button Content="Edit" Width="80" Command="{Binding EditCommand}"/>
            <Button Content="Delete" Width="80" Command="{Binding DeleteCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Rooms}" SelectedItem="{Binding SelectedRoom}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding RoomID}" Width="50"/>
                <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="*"/>
                <DataGridTextColumn Header="Room Type" Binding="{Binding RoomType.RoomTypeName}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding RoomDescription}" Width="2*"/>
                <DataGridTextColumn Header="Capacity" Binding="{Binding RoomMaxCapacity}" Width="*"/>
                <DataGridTextColumn Header="Price/Date" Binding="{Binding RoomPricePerDate, StringFormat='C'}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>