<Window x:Class="PhamHuynhSumWPF.Views.CustomerShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhamHuynhSumWPF.Views"
        xmlns:customerViews="clr-namespace:PhamHuynhSumWPF.Views.CustomerView" 
        mc:Ignorable="d"
        Title="Customer Portal - FUMiniHotelSystem" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Logout" 
                Width="80" Height="20" HorizontalAlignment="Right" 
                Margin="5,5,10,5"
                Click="Logout_Click"/>
        <TabControl Grid.Row="1">
            <TabItem Header="Book a Room">
                <customerViews:CustomerBookingView x:Name="CustomerBookingTab" />
            </TabItem>
            <TabItem Header="My Profile">
                <customerViews:ProfileView x:Name="ProfileViewTab"/>
            </TabItem>
            <TabItem Header="My Booking History">
                <customerViews:BookingHistoryView x:Name="BookingHistoryTab"/>
            </TabItem>
        </TabControl>
    </Grid>

</Window>